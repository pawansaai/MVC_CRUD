@model List<WebApplication1.Models.Domain.Employee>
@{
}

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>DOB</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Department</th>
            <th>Salary</th>
            <th> </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.DOB.ToString("dd-MM-yyyy")</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Department</td>
                <td>@employee.Salary</td>
                <td><a href =" Employees/View/@employee.Id">View</a></td>

            </tr>
        }
    </tbody>

</table>

